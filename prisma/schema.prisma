datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  email         String   @unique
  accessToken   String
  refreshToken  String

  @@unique([accessToken, refreshToken])
}

model Agent {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  settings  Json
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  agent     Agent    @relation(fields: [agentId], references: [id])
  agentId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
